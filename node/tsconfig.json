{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "strict": true,
    "noEmitOnError": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [ "node", "webpack" ],
    "lib": ["es2020", "es2020.promise", "es2020.bigint", "es2020.string"]
  },
  "include": [ "src" ],
  "exclude": [ "node_modules" ]
}
