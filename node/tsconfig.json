{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "strict": true,
    "noEmitOnError": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [ "src" ],
  "exclude": [ "node_modules" ]
}
