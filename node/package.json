{
  "name": "@malkab/node-utils",
  "version": "1.2.0",
  "description": "TypeScript for Node utilities, small functions highly reusable.",
  "scope": "@malkab",
  "author": {
    "name": "Juan Pedro Perez Alcantara",
    "email": "jp.perez.alcantara@gmail.com",
    "url": "http://me.com"
  },
  "main": "dist/main.js",
  "types": "dist/lib/index.d.ts",
  "keywords": [
    "utils",
    "typescript"
  ],
  "license": "UNLICENSED",
  "homepage": "https://github.com/owner/project#readme",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/malkab/code-samples.git"
  },
  "private": false,
  "scripts": {
    "clean": "rm -Rf build ; rm -Rf dist",
    "quick-test": "npm-run-all --parallel service:watch:quick-test:server service:build",
    "start": "npm-run-all --parallel service:watch:mocha:server service:build",
    "build": "npm run clean ; npm run service:build-lib",
    "build-with-docs": "npm run clean ; npm run service:build-lib ; npm run builddocs ; cp -R typedoc/build/html dist/docs",
    "build-docs": "cd typedoc ; ./html ; cd ..",
    "service:build-lib": "webpack --config webpack-production.config.js --progress --colors",
    "service:build": "webpack --progress --colors",
    "service:watch:quick-test:server": "nodemon --inspect=0.0.0.0:9329 \"./build/quicktest.js\" --watch \"./build/quicktest.js\"",
    "service:watch:mocha:server": "nodemon --ext js --watch ./build/mocha.js --exec 'mocha --timeout 20000 ./build/mocha.js || true'"
  },
  "engines": {
    "node": "^12.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/get-folder-size": "^2.0.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@types/node-forge": "^0.9.5",
    "@types/uid-generator": "^2.0.2",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "terser": "^5.2.1",
    "terser-webpack-plugin": "^4.1.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.18.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.0.0",
    "webpack-filter-warnings-plugin": "^1.2.1",
    "webpack-node-externals": "^2.5.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "fs-extra": "^9.0.1",
    "get-folder-size": "^2.0.1",
    "node-forge": "^0.9.1",
    "round-to": "^4.1.0",
    "rxjs": "^6.6.2",
    "uid-generator": "^2.0.0"
  }
}
